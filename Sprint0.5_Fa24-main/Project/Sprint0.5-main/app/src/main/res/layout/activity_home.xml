<!-- res/layout/activity_home.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_above="@+id/custom_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Fragments will be loaded here -->
    </FrameLayout>

    <!-- Custom Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/custom_bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <!-- Navigation Item 1: Destinations -->
        <LinearLayout
            android:id="@+id/nav_destinations"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/destinations"
                android:contentDescription="@string/destinations" />

            <TextView
                android:id="@+id/nav_destinations_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destinations"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Navigation Item 2: Logistics -->
        <LinearLayout
            android:id="@+id/nav_logistics"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/logistics"
                android:contentDescription="@string/logistics" />

            <TextView
                android:id="@+id/nav_logistics_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logistics"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Navigation Item 3: Dining -->
        <LinearLayout
            android:id="@+id/nav_dining"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/dining"
                android:contentDescription="@string/dining" />

            <TextView
                android:id="@+id/nav_dining_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dining"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Navigation Item 4: Accommodations -->
        <LinearLayout
            android:id="@+id/nav_accommodations"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/accommodation"
                android:contentDescription="@string/accommodations" />

            <TextView
                android:id="@+id/nav_accommodations_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accommodations"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Navigation Item 5: Transportation -->
        <LinearLayout
            android:id="@+id/nav_transportation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/transportation"
                android:contentDescription="@string/transportation" />

            <TextView
                android:id="@+id/nav_transportation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transportation"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Navigation Item 6: Travel -->
        <LinearLayout
            android:id="@+id/nav_travel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/travel"
                android:contentDescription="@string/travel" />

            <TextView
                android:id="@+id/nav_travel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/travel"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>