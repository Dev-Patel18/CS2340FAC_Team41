<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etTripDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration (e.g., 7 days)" />

    <EditText
        android:id="@+id/etDestinations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destinations (e.g., Paris, Rome)" />

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes or Tips" />

    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date (e.g., YYYY-MM-DD)" />

    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date (e.g., YYYY-MM-DD)" />

    <EditText
        android:id="@+id/etAccommodations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Accommodations" />

    <EditText
        android:id="@+id/etDiningReservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dining Reservations" />

    <EditText
        android:id="@+id/etRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rating (1-5)" />

    <Button
        android:id="@+id/btnSubmitPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>

